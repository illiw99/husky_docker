{
    "name": "ROS 2 Development Container",
    "privileged": true,
    "remoteUser": "admin",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "USERNAME": "admin"
        }
    },
    "workspaceFolder": "/home/ws",
    "workspaceMount": "type=bind,source=${localWorkspaceFolder}/src,target=/home/ws/src",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-themes",
                "twxs.cmake",
                "donjayamanne.python-extension-pack",
                "eamodio.gitlens",
                "ms-iot.vscode-ros"
            ]
        }
    },
    "containerEnv": {
        "DISPLAY": "unix:0",
        "ROS_AUTOMATIC_DISCOVERY_RANGE": "LOCALHOST",
        "ROS_DOMAIN_ID": "42"
    },
    "runArgs": [
        "--net=host",
        "--pid=host",
        "--ipc=host",
        "-e",
        "DISPLAY=${env:DISPLAY}"
    ],
    "mounts": [
        "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
        "source=/dev/dri,target=/dev/dri,type=bind,consistency=cached",
        "source=${localWorkspaceFolder}/.git,target=/home/ws/.git,type=bind,consistency=cached",
        "source=${localWorkspaceFolder}/.gitignore,target=/home/ws/.gitignore,type=bind,consistency=cached",
        "source=${localWorkspaceFolder}/.cache/jazzy/build,target=/home/ws/build,type=bind",
        "source=${localWorkspaceFolder}/.cache/jazzy/install,target=/home/ws/install,type=bind",
        "source=${localWorkspaceFolder}/.cache/jazzy/log,target=/home/ws/log,type=bind"
    ],
    "postCreateCommand": "sudo rosdep update && sudo rosdep install --from-paths src dep --ignore-src -y && sudo chown -R $(whoami) /home/ws/"
}